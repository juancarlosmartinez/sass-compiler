{
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}